{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "node",
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: release",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"customOptions": "-v ./config.yaml:/onvif.yaml --cap-add NET_ADMIN"
			},
			"platform": "node"
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"env": {
					"DEBUG": "*",
					"NODE_ENV": "development"
				},
				"customOptions": "-v ./config.yaml:/usr/src/app/onvif.yaml --cap-add NET_ADMIN"
			},
			"node": {
				"enableDebugging": true
			}
		}
	]
}